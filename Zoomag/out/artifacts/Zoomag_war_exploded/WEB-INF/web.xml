<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>site_id</param-name>
        <param-value>2</param-value>
    </context-param>
    <context-param>
        <param-name>db_host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>db_name</param-name>
        <param-value>zoomag</param-value>
    </context-param>
    <context-param>
        <param-name>db_port</param-name>
        <param-value>5432</param-value>
    </context-param>
    <context-param>
        <param-name>db_login</param-name>
        <param-value>althar</param-value>
    </context-param>
    <context-param>
        <param-name>db_password</param-name>
        <param-value>bredokbredok2000</param-value>
    </context-param>
    <context-param>
        <param-name>db_driver_class</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>db_connection_prefix</param-name>
        <param-value>jdbc:postgresql:</param-value>
    </context-param>
    <context-param>
        <param-name>admin_login</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>admin_password</param-name>
        <param-value>pass</param-value>
    </context-param>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>ftwo.zoomag.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Base</servlet-name>
        <servlet-class>ftwo.zoomag.servlets.BaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>ftwo.zoomag.servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Catalogue</servlet-name>
        <servlet-class>ftwo.zoomag.servlets.CatalogueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Content</servlet-name>
        <servlet-class>ftwo.zoomag.servlets.ContentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>ftwo.zoomag.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Base</servlet-name>
        <url-pattern>/Base</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/Authentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Catalogue</servlet-name>
        <url-pattern>/Catalogue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Content</servlet-name>
        <url-pattern>/Content</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.html</welcome-file>
    </welcome-file-list>
</web-app>
